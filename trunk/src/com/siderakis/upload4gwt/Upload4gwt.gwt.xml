<?xml version="1.0" encoding="UTF-8"?>
<module rename-to='upload4gwt'>
	<inherits name='com.google.gwt.user.User' />
	<inherits name='com.google.gwt.user.theme.standard.Standard' />
	<entry-point class='com.siderakis.upload4gwt.client.Upload4gwt' />
	<source path='client' />
	<source path='shared' />
	<define-property name="fileapi.support" values="yes,no" />

	<property-provider name="fileapi.support"><![CDATA[
			var input=document.createElement('input');
			input.setAttribute('type','file');
			return input.files==null?'no':'yes';
	]]></property-provider>

	<replace-with
		class="com.siderakis.upload4gwt.client.FileInput.FileInputImplHtml5">
		<when-type-is
			class="com.siderakis.upload4gwt.client.FileInput.FileInputImpl" />
		<when-property-is name="fileapi.support" value="yes" />
		<any>
			<when-property-is name="user.agent" value="ie8" />
			<when-property-is name="user.agent" value="safari" />
			<when-property-is name="user.agent" value="gecko1_8" />
			<when-property-is name="user.agent" value="opera" />
		</any>
	</replace-with>
</module>
